{
    "name": "nucleos/form-extensions",
    "description": "This library adds some custom form elements and validation for symfony.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "symfony",
        "symfony-bridge",
        "form",
        "validation",
        "bundle"
    ],
    "authors": [
        {
            "name": "Christian Gripp",
            "email": "mail@core23.de"
        }
    ],
    "homepage": "https://nucleos.rocks",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/core23"
        },
        {
            "type": "opencollective",
            "url": "https://opencollective.com/core23"
        },
        {
            "type": "ko-fi",
            "url": "https://ko-fi.com/core23"
        },
        {
            "type": "other",
            "url": "https://donate.core23.de"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pcre": "*",
        "sonata-project/doctrine-extensions": "^1.1",
        "symfony/form": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/options-resolver": "^5.4",
        "symfony/property-access": "^5.4",
        "symfony/translation": "^5.4",
        "symfony/validator": "^5.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "doctrine/orm": "^2.5",
        "doctrine/persistence": "^1.3 || ^2.0",
        "ergebnis/composer-normalize": "^2.0.1",
        "symfony/browser-kit": "^5.4",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/expression-language": "^5.4",
        "symfony/framework-bundle": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/twig-bridge": "^5.4",
        "twig/intl-extra": "^2.4 || ^3.0"
    },
    "conflict": {
        "doctrine/orm": "<2.5",
        "symfony/framework-bundle": "<5.4"
    },
    "suggest": {
        "symfony/framework-bundle": "If you want to use symfony"
    },
    "autoload": {
        "psr-4": {
            "Nucleos\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nucleos\\Form\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@composer bin all install --ansi"
        ],
        "post-update-cmd": [
            "@composer bin all install --ansi"
        ]
    }
}
